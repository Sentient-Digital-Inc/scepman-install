{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "OrgName": {
            "type": "string",
            "minLength": 2,
            "metadata": {
                "description": "Name of company or organization for certificate subject"
            }
        },
        "license": {
            "type": "string",
            "defaultValue": "trial",
            "metadata": {
                "description": "License Key for SCEPman"
            }
        },
        "appRegistrationGuid": {
            "type": "string",
            "metadata": {
                "description": "GUID of AAD app registration"
            }
        },
        "appRegistrationKey": {
            "type": "string",
            "metadata": {
                "description": "Secret of AAD app registration"
            }
        },
        "keyVaultName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24,
            "metadata": {
                "description": "Specifies the name of the key vault."
            }
        },
        "appServicePlanName": {
            "type": "string",
            "maxLength": 40
        },
        "appServiceName": {
            "type": "string",
            "maxLength": 60
        },
        "managedIdentityName": {
            "type": "string",
            "maxLength": 60
        }
    },
    "variables": {
        "_artifactsLocation":"https://raw.githubusercontent.com/scepman/install/master/dist/Artifacts.zip",
        "appSvcTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appSvc.json', parameters('_artifactsLocationSasToken')))]",
        "vaultTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/vault.json', parameters('_artifactsLocationSasToken')))]",
        "appConfigTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appConfig.json', parameters('_artifactsLocationSasToken')))]",
        "deploymentManagedIdentityTemplateUri": "[uri(parameters('_artifactsLocation'), concat('nestedtemplates/appIdentity.json', parameters('_artifactsLocationSasToken')))]",
        "AppServicePlanName": "[parameters('appServicePlanName')]",
        "AppServiceName": "[parameters('appServiceName']",
        "managedIdentityName": "[parameters('managedIdentityName')]",
        "keyVaultName": "[parameters('keyVaultName')]",
        "deploymentAppServiceName": "SCEPmanAppService",
        "deploymentVaultName": "SCEPmanVault",
        "deploymentConfigurationName": "SCEPmanConfiguration",
        "deploymentIentityName": "SCEPmanManagedIdentity"        
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "pid-a262352f-52a9-4ed9-a9ba-6a2b2478d19b-partnercenter",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "[variables('deploymentAppServiceName')]",
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('appSvcTemplateUri')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "AppServicePlanName": {
                                        "value": "[variables('AppServicePlanName')]"
                                    },
                                    "appServiceName": {
                                        "value": "[variables('AppServiceName')]"
                                    },
                                    "location": {
                                        "value": "[parameters('location')]"
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "[variables('deploymentVaultName')]",
                            "dependsOn": [
                                "[concat('Microsoft.Resources/deployments/', variables('deploymentAppServiceName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('vaultTemplateUri')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "appServiceName": {
                                        "value": "[variables('appServiceName')]"
                                    },
                                    "location": {
                                        "value": "[parameters('location')]"
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "[variables('deploymentConfigurationName')]",
                            "dependsOn": [
                                "[concat('Microsoft.Resources/deployments/', variables('deploymentAppServiceName'))]",
                                "[concat('Microsoft.Resources/deployments/', variables('deploymentVaultName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('appConfigTemplateUri')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "AppServicePlanName": {
                                        "value": "[variables('AppServicePlanName')]"
                                    },
                                    "appServiceName": {
                                        "value": "[variables('AppServiceName')]"
                                    },
                                    "keyVaultName": {
                                        "value": "[variables('keyVaultName')]"
                                    },
                                    "OrgName": {
                                        "value": "[parameters('OrgName')]"
                                    },
                                    "appRegistrationGuid": {
                                        "value": "[parameters('appRegistrationGuid')]"
                                    },
                                    "appRegistrationKey": {
                                        "value": "[parameters('appRegistrationKey')]"
                                    },
                                    "_artifactsLocationSasToken": {
                                        "value": "[parameters('_artifactsLocationSasToken')]"
                                    },
                                    "_artifactsLocation": {
                                        "value": "[parameters('_artifactsLocation')]"
                                    },
                                    "license": {
                                        "value": "[parameters('license')]"
                                    },
                                    "location": {
                                        "value": "[parameters('location')]"
                                    }
                                }
                            }
                        },
                        {
                            "type": "Microsoft.Resources/deployments",
                            "apiVersion": "2020-06-01",
                            "name": "[variables('deploymentIentityName')]",
                            "dependsOn": [
                                "[concat('Microsoft.Resources/deployments/', variables('deploymentAppServiceName'))]",
                                "[concat('Microsoft.Resources/deployments/', variables('deploymentVaultName'))]",
                                "[concat('Microsoft.Resources/deployments/',variables('deploymentConfigurationName'))]"
                            ],
                            "properties": {
                                "mode": "Incremental",
                                "templateLink": {
                                    "uri": "[variables('deploymentManagedIdentityTemplateUri')]",
                                    "contentVersion": "1.0.0.0"
                                },
                                "parameters": {
                                    "managedIdentityName": {
                                        "value": "[variables('managedIdentityName')]"
                                    },
                                    "location": {
                                        "value": "[parameters('location')]"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        }
    ]
}