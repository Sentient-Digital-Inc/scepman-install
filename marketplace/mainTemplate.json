{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "OrgName": {
            "type": "string",
            "metadata": {
                "description": "Name of company or organization for certificate subject"
            }
        },
        "appRegistrationGuid": {
            "type": "string",
            "metadata": {
                "description": "GUID of AAD app registration"
            }
        },
        "appRegistrationKey": {
            "type": "string",
            "metadata": {
                "description": "Secret of AAD app registration"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located including a trailing '/'"
            },
            "defaultValue": "[uri(deployment().properties.templatelink.uri,'Artifacts.zip')]"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location where the resources will be deployed"
            }
        }
    },
    "variables": {
        "nestedTemplateUri": "[uri(deployment().properties.templatelink.uri,'nestedtemplates/scepman.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "pid-8f2bd84e-9cfa-50df-a9b8-69861acb9d60",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('nestedTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "OrgName": {
                        "value": "[parameters('OrgName')]"
                    },
                    "appRegistrationGuid": {
                        "value": "[parameters('appRegistrationGuid')]"
                    },
                    "appRegistrationKey": {
                        "value": "[parameters('appRegistrationKey')]"
                    },
                    "_artifactsLocation": {
                        "value": "[parameters('_artifactsLocation')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                }
            }
        }
    ]
}