{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "OrgName": {
            "type": "string",
            "metadata": {
                "description": "Name of company or organization for certificate subject"
            }
        },
        "appRegistrationGuid": {
            "type": "string",
            "metadata": {
                "description": "GUID of AAD app registration"
            }
        },
        "appRegistrationKey": {
            "type": "string",
            "metadata": {
                "description": "Secret of AAD app registration"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located including a trailing '/'"
            },
            "defaultValue": "[uri(deployment().properties.templatelink.uri,'Artifacts.zip')]"
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location where the resources will be deployed"
            }
        }
    },
    "variables": {
        "AppServicePlanName": "[concat('scepman-sp',uniquestring(resourceGroup().id))]",
        "AppServiceName": "[concat('scepman-app',uniquestring(resourceGroup().id))]",
        "keyVaultName": "[concat('scepmanvlt',uniquestring(resourceGroup().id))]",
        "keys": [
            "Get",
            "List",
            "Update",
            "Create",
            "Import",
            "Delete",
            "Recover",
            "Backup",
            "Restore",
            "Decrypt",
            "Encrypt",
            "UnwrapKey",
            "WrapKey",
            "Verify",
            "Sign"
        ],
        "secrets": [
            "Get",
            "List",
            "Set",
            "Delete",
            "Recover",
            "Backup",
            "Restore"
        ],
        "certificates": [
            "Get",
            "List",
            "Update",
            "Create",
            "Import",
            "Delete",
            "Recover",
            "Backup",
            "Restore",
            "ManageContacts",
            "ManageIssuers",
            "GetIssuers",
            "ListIssuers",
            "SetIssuers",
            "DeleteIssuers"
        ]
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('keyVaultName')]",
            "location": "[parameters('location')]",
            "apiVersion": "2018-02-14",
            "tags": {},
            "scale": null,
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]"
            ],
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": false,
                "enabledForDiskEncryption": false,
                "sku": {
                    "name": "standard",
                    "family": "A"
                },
                "accessPolicies": [
                    {
                        "objectId": "[reference(concat('Microsoft.Web/sites/', variables('appServiceName')), '2018-02-01', 'Full').identity.principalId]",
                        "tenantId": "[subscription().tenantId]",
                        "permissions": {
                            "keys": "[variables('keys')]",
                            "secrets": "[variables('secrets')]",
                            "certificates": "[variables('certificates')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('AppServicePlanName')]",
            "location": "[parameters('location')]",
            "sku": {
                "Tier": "Standard",
                "Name": "S1"
            },
            "properties": {
                "name": "[variables('AppServicePlanName')]",
                "workerSize": 1,
                "numberOfWorkers": 1
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/sites",
            "name": "[variables('appServiceName')]",
            "location": "[parameters('location')]",
            "identity": {
                "principalId": "",
                "tenantId": "",
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "WEBSITE_RUN_FROM_PACKAGE",
                            "value": "[parameters('_artifactsLocation')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:ApplicationId",
                            "value": "[parameters('appRegistrationGuid')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:ApplicationKey",
                            "value": "[parameters('appRegistrationKey')]"
                        },
                        {
                            "name": "AppConfig:AuthConfig:TenantName",
                            "value": "[subscription().tenantId]"
                        },
                        {
                            "name": "AppConfig:BaseUrl",
                            "value": "[concat('https://', variables('appServiceName'),'.azurewebsites.net/')]"
                        },
                        {
                            "name": "AppConfig:DebugMode",
                            "value": "false"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:KeyVaultURL",
                            "value": "[concat('https://', variables('keyVaultName'),'.vault.azure.net/')]"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:CertificateName",
                            "value": "SCEPman-Device-Root-CA-V1"
                        },
                        {
                            "name": "AppConfig:KeyVaultConfig:RootCertificateConfig:Subject",
                            "value": "[concat('CN=SCEPman-Device-Root-CA-V1, ', 'OU=',subscription().tenantId, ', ', 'O=', parameters('OrgName'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]"
            ]
        }
    ]
}